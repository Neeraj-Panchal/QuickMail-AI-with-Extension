{
  "name": "Email Writer Assistant",
  "description": "AI powered email reply generater",
  "version": "1.0",
  "manifest_version": 3,
  "permissions":["activeTab","storage"],
  "host_permissions": [
    "http://localhost:8080/*",
    "*://mail.google.com/*"
  ],
  
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://mail.google.com/*"],
      "css" : ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "icons/*" ],
      "matches": ["*://mail.google.com/*"]
    }
  ],
  "action": {
    "default_title": "Email Writer Assistant",
    "default_icon": "email-writer.png"
  }
}